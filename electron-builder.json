{
  "productName": "gepcommander",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!.github",
    "!.vscode",
    "!.code-workspace",
    "!.npmrc",
    "!*.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!hooks/",
    "!_config.yml",
    "!angular.json",
    "!tsconfig*.json",
    "!tslint.json",
    "!.eslintrc.json",
    "!angular.webpack.js",
    "!*.map"
  ],
  "win": {
    "icon": "dist/assets/icons",
    "target": [
      "portable"
    ]
  },
  "portable": {
    "splashImage": "dist/assets/icons/favicon.png"
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": [
      "AppImage"
    ]
  }
}
